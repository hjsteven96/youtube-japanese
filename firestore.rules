rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자 프로필 및 하위 컬렉션
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /learningHistory/{videoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /savedInterpretations/{interpretationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 영상 분석 캐시: 읽기는 공개, 쓰기는 로그인 사용자만
    match /videoAnalyses/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
